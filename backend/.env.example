# HoopStats Backend Environment Variables
# Copy this to .env and fill in your values

# MongoDB Connection (Required)
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/hoopstats
# For Railway MongoDB: Automatically provided
MONGO_URL=mongodb://localhost:27017/hoopstats

# Emergent LLM Key (Required for AI game summaries)
EMERGENT_LLM_KEY=your_emergent_llm_key_here

# JWT Secret (Auto-generated if not set)
JWT_SECRET=your_secret_key_here

# Optional: Stripe for subscriptions
STRIPE_SECRET_KEY=your_stripe_key_here
