{
  "expo": {
    "name": "HoopStats",
    "slug": "stattrack-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "hoopstats",
    "userInterfaceStyle": "dark",
    "newArchEnabled": false,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.hoopstats.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "HoopStats needs camera access to take photos during games.",
        "NSPhotoLibraryUsageDescription": "HoopStats needs photo library access to save game photos.",
        "NSPhotoLibraryAddUsageDescription": "HoopStats needs permission to save photos to your library.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#1A1A2E"
      },
      "package": "com.hoopstats.app",
      "versionCode": 1,
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#1A1A2E"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "HoopStats needs camera access to take photos during games."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "HoopStats needs access to your photos to save game images.",
          "savePhotosPermission": "HoopStats needs permission to save photos to your library."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "owner": "hoopstats",
    "extra": {
      "eas": {
        "projectId": "ea8b4aa1-6a7e-41a6-ad79-141b749a305f"
      }
    }
  }
}
