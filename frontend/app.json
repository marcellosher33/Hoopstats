{
  "expo": {
    "name": "CourtClock",
    "slug": "courtclock",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "courtclock",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.courtclock.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "CourtClock needs camera access to take photos during games.",
        "NSPhotoLibraryUsageDescription": "CourtClock needs photo library access to save game photos.",
        "NSPhotoLibraryAddUsageDescription": "CourtClock needs permission to save photos to your library.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#1A1A2E"
      },
      "package": "com.courtclock.app",
      "versionCode": 1,
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#1A1A2E"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "CourtClock needs camera access to take photos during games."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "CourtClock needs access to your photos to save game images.",
          "savePhotosPermission": "CourtClock needs permission to save photos to your library."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    },
    "owner": "your-expo-username",
    "updates": {
      "url": "https://u.expo.dev/your-project-id"
    },
    "runtimeVersion": {
      "policy": "appVersion"
    }
  }
}
